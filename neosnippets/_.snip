# Global snippets

source _.vim

snippet current_timestamp
abbr %Y-%m-%d %H:%M:%S
options word
    `strftime("%Y-%m-%dT%H:%M:%S")`${0}

snippet current_date
abbr %Y-%m-%d
options word
    `strftime("%Y-%m-%d")`${0}

snippet current_time
abbr %H:%M:%S
    `strftime("%H:%M:%S")`${0}

snippet filename
options word
    `expand('%:t')`${0}

snippet path
options word
    `expand('%')`${0}

